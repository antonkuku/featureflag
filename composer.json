{
  "name": "antonkuku/featureflag",
  "description": "A library for easy work with feature flags",
  "type": "library",
  "license": "MIT",
  "keywords": ["php", "feature flag", "feature flags"],
  "homepage": "https://github.com/antonkuku/featureflag",
  "authors": [
    {
      "name": "Anton Kuku"
    }
  ],
  "require": {
    "php": ">=7",
    "psr/http-client": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^8",
    "mockery/mockery": "^1.4"
  },
  "suggest": {
    "ext-json": "Required for JSON data source",
    "ext-curl": "Required for remote JSON data source"
  },
  "autoload": {
    "psr-4": {
      "FeatureFlag\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "tests\\": "tests/"
    }
  }
}
